  <!-- Importamos la fuente "Poppins" desde Google Fonts -->
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap');

    /* Animación para el texto: se desliza suavemente hacia arriba mientras aparece */
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px); /* Comienza 20px abajo */
      }
      to {
        opacity: 1;
        transform: translateY(0); /* Termina en su posición original */
      }
    }

    /* Animación para la imagen: se escala suavemente de 0.95 a 1 y se desvanece */
    @keyframes fadeInScale {
      from {
        opacity: 0;
        transform: scale(0.95); /* Comienza un poco más pequeña */
      }
      to {
        opacity: 1;
        transform: scale(1); /* Termina a tamaño real */
      }
    }

    /* Clase que aplica la animación fadeInUp al texto en 1.5s */
    .fade-in-up {
      animation: fadeInUp 1.5s ease-out forwards;
    }

    /* Clase que aplica la animación fadeInScale a la imagen en 1.5s */
    .fade-in-scale {
      animation: fadeInScale 1.5s ease-out forwards;
    }

    /* Clase para aplicar la fuente "Poppins" a los textos */
    .font-poppins {
      font-family: 'Poppins', sans-serif;
    }
  </style>
</head>
