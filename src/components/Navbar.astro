---
import NavLinks from './NavLinks.astro';
---

<header class="bg-transparent absolute top-0 w-full z-10" role="banner">
  <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <!-- Logo -->
      <div class="text-2xl font-bold text-teal-600 dark:text-teal-400">Dev</div>

      <!-- Navegación de escritorio -->
      <nav class="hidden md:flex space-x-6" aria-label="Main navigation">
        <NavLinks />
      </nav>

      <!-- Botón hamburguesa para móviles -->
      <button
        id="hamburger-btn"
        class="md:hidden text-gray-900 dark:text-gray-100 focus:outline-none"
        aria-label="Toggle mobile menu"
        aria-expanded="false"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </button>
    </div>

    <!-- Menú móvil -->
    <nav id="mobile-menu" class="hidden md:hidden bg-black/50 dark:bg-gray-800/80 p-4 rounded-2xl mt-2" aria-label="Mobile navigation">
      <NavLinks mobile={true} />
    </nav>
  </div>
</header>

<script src="/src/scripts/navbar.js" type="module"></script>
 
