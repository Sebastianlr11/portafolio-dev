---
/* Frontmatter vacío */
---
<header class="bg-transparent  relative top-0 w-full z-10 ">
  <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <div class="text-2xl font-bold text-teal-600">Dev</div>
      <nav class="hidden md:flex space-x-6">
        <a href="#proyectos" class="text-teal-600 hover:text-teal-800 transition">Proyectos</a>
        <a href="#educacion" class="text-teal-600 hover:text-teal-800 transition">Educación</a>
        <a href="#sobre-mi" class="text-teal-600 hover:text-teal-800 transition">Sobre Mi</a>
        <a href="#contacto" class="text-teal-600 hover:text-teal-800 transition">Contacto</a>
      </nav>
      <div class="md:hidden">
        <button id="menu-btn" class="rounded bg-gray-100 p-2 text-gray-600 hover:text-teal-700 focus:outline-none" aria-label="Abrir menú">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
    <nav id="mobile-menu" class="hidden md:hidden bg-black/50 shadow-sm p-4 rounded-2xl">
      <a href="#proyectos" class="block py-2 text-white hover:text-teal-600 transition">Proyectos</a>
      <a href="#educacion" class="block py-2 text-white hover:text-teal-600 transition">Educación</a>
      <a href="#sobre-mi" class="block py-2 text-white hover:text-teal-600 transition">Sobre Mi</a>
      <a href="#contacto" class="block py-2 text-white hover:text-teal-600 transition">Contacto</a>
    </nav>
  </div>
</header>

<style>
  .font-poppins {
    font-family: 'Poppins', sans-serif;
  }
</style>

<script>
  document.getElementById('menu-btn').addEventListener('click', () => {
    const mobileMenu = document.getElementById('mobile-menu');
    mobileMenu.classList.toggle('hidden');
  });
</script>
