---
/* Navbar.astro - Componente de barra de navegación */
---
<header class="bg-transparent fixed top-0 w-full z-10" role="banner">
  <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <!-- Logo -->
      <div class="text-2xl font-bold text-teal-600 dark:text-teal-400">Dev</div>

      <!-- Navegación de escritorio -->
      <nav class="hidden md:flex space-x-6" aria-label="Main navigation">
        <a href="#proyectos" class="text-gray-900 dark:text-gray-100 hover:text-teal-600 dark:hover:text-teal-400 transition">Proyectos</a>
        <a href="#educacion" class="text-gray-900 dark:text-gray-100 hover:text-teal-600 dark:hover:text-teal-400 transition">Educación</a>
        <a href="#sobre-mi" class="text-gray-900 dark:text-gray-100 hover:text-teal-600 dark:hover:text-teal-400 transition">Sobre Mí</a>
        <a href="#contacto" class="text-gray-900 dark:text-gray-100 hover:text-teal-600 dark:hover:text-teal-400 transition">Contacto</a>
      </nav>

      <!-- Botón hamburguesa para móviles -->
      <button id="hamburger-btn" class="md:hidden text-gray-900 dark:text-gray-100 focus:outline-none" aria-label="Toggle mobile menu">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </button>
    </div>

    <!-- Menú móvil -->
    <nav id="mobile-menu" class="hidden md:hidden bg-black/50 dark:bg-gray-800/80 p-4 rounded-2xl mt-2" aria-label="Mobile navigation">
      <ul class="space-y-2">
        <li><a href="#proyectos" class="block text-gray-100 hover:text-teal-400 transition">Proyectos</a></li>
        <li><a href="#educacion" class="block text-gray-100 hover:text-teal-400 transition">Educación</a></li>
        <li><a href="#sobre-mi" class="block text-gray-100 hover:text-teal-400 transition">Sobre Mí</a></li>
        <li><a href="#contacto" class="block text-gray-100 hover:text-teal-400 transition">Contacto</a></li>
      </ul>
    </nav>
  </div>

  <!-- JavaScript para el menú hamburguesa -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const hamburgerBtn = document.getElementById('hamburger-btn');
      const mobileMenu = document.getElementById('mobile-menu');

      hamburgerBtn.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    });
  </script>
</header>

<!-- Estilos opcionales en un archivo externo como styles.css -->
<style>
  /* Si prefieres mantener los estilos en el mismo archivo */
  nav a {
    font-size: 1rem;
  }
</style>