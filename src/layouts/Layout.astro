---
import '../styles/global.css';
---
<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Mi Portafolio</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    /* Modo claro (por defecto) */
    --bg-color: #ffffff;
    --text-color: #1f2937; /* gris oscuro */
    --text-muted: #6b7280; /* gris medio */
    --accent-color: #2dd4bf; /* teal */
    --card-bg: #f0fdfa; /* fondo claro para ítems */
    --line-color: #e5e7eb; /* gris claro para líneas */
  }

  /* Modo oscuro */
  @media (prefers-color-scheme: dark) {
    :root {
      --bg-color: #1f2937; /* gris oscuro */
      --text-color: #f3f4f6; /* blanco grisáceo */
      --text-muted: #9ca3af; /* gris claro */
      --accent-color: #2dd4bf; /* teal, lo mantenemos */
      --card-bg: #374151; /* gris medio para ítems */
      --line-color: #4b5563; /* gris oscuro para líneas */
    }
  }

  /* Clase para forzar modo oscuro manualmente */
  .dark {
    --bg-color: #1f2937;
    --text-color: #f3f4f6;
    --text-muted: #9ca3af;
    --accent-color: #2dd4bf;
    --card-bg: #374151;
    --line-color: #4b5563;
  }

  /* Aplicar las variables al body */
  body {
    background-color: var(--bg-color);
    color: var(--text-color);
    transition: background-color 0.3s ease, color 0.3s ease;
  }
</style>